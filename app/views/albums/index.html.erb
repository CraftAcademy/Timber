<div class="page-header">
    <h1>Shared albums</h1></div>


<div class="container">  
   <div class="row"> 
    <div class="col">
      <div align="center" id="myCarousel" class="carousel slide mx-auto" data-ride="carousel"> 
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <%= @photo %> 
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://source.unsplash.com/VvtPllEUnhs/800x740"  alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://source.unsplash.com/wN0xm1d3Lp8/800x740" alt="Third slide">
         </div>
       </div>
       <div class="col">
        <% @albums.each do |album| %>
         <div class="row justify-content-center" id="albumshared">
              <%= link_to album.title, album_path(album) %>
          </div>
        </div>
        <% end %> 
    </div>
   </div>
  </div>
</div>

 