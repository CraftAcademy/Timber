<div class="page-header"><h1>Upload Photo</h1></div>

<%= form_for @photo do |f| %>
  <%= render 'partials/errors', object: @photo %>
  <%= hidden_field_tag :album_id, @album_id %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'mx-sm-3 mb-2' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'mx-sm-3 mb-2' %>
  </div>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>
  <%= f.submit 'Save to album', class: 'btn btn-primary' %>
<% end %>
